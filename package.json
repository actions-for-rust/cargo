{
    "name": "rust-cargo",
    "version": "1.0.3",
    "private": false,
    "description": "Run cargo command",
    "main": "lib/main.js",
    "directories": {
        "lib": "lib",
        "test": "__tests__"
    },
    "scripts": {
        "bundle": "shx cp -r .matchers ./dist/",
        "build": "run-s clean build:ncc bundle",
        "build:ncc": "ncc build src/main.ts --minify",
        "clean": "shx rm -rf ./dist/*",
        "format": "prettier --write 'src/**/*.ts' '__tests__/**/*.ts'",
        "lint": "run-p lint:*",
        "lint:tsc": "tsc --noEmit",
        "lint:eslint": "eslint 'src/**/*.ts' '__tests__/**/*.ts'",
        "watch": "run-s clean watch:ncc",
        "watch:ncc": "ncc build src/main.ts --watch",
        "test": "jest -c jest.config.json"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/actions-rs/cargo.git"
    },
    "keywords": [
        "actions",
        "rust",
        "cargo"
    ],
    "author": "actions-rs",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/actions-rs/cargo/issues"
    },
    "dependencies": {
        "@actions-for-rust/core": "^0.1.7",
        "@actions/core": "^1.10.0",
        "string-argv": "^0.3.1"
    },
    "devDependencies": {
        "@types/jest": "^26.0.23",
        "@types/node": "^16.18.14",
        "@typescript-eslint/eslint-plugin": "^5.54.1",
        "@typescript-eslint/parser": "^5.54.1",
        "@vercel/ncc": "^0.36.1",
        "eslint": "^8.36.0",
        "eslint-config-prettier": "^8.7.0",
        "eslint-plugin-prettier": "^4.2.1",
        "jest": "^26.6.3",
        "jest-circus": "^27.0.6",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.8.4",
        "shx": "^0.3.4",
        "ts-jest": "^26.5.6",
        "typescript": "^4.9.5"
    }
}
